<div class="container my-5">
    <div class="row mb-4">
        <div class="col">
            <h1>Hey,<%= user.firstName %></h1>
        </div>
        <div class="col text-end">
            <a href="/dashboard/add"></a>
        </div>
    </div>
    <div class="row">
        <% if (notes.length > 0) { for(var i=0; i < notes.length; i++) { %>
          <div class="col-sm-3 mb-4">
            <div class="note-card card mb-4 px-3 py-4">
              <a href="/dashboard/note/<%= notes[i]._id %>" class="text-decoration-none text-dark">
                  <h4 class="card-title"><%= notes[i].title%>...</h4>
              </a>
              <p class="card-text"><%= notes[i].body %>...</p>
              <a href="/dashboard/note/<%= notes[i]._id %>" class="btn btn-dark mt-auto">Read more</a>
            </div>           
          </div>
        <%  }} else { %>
          <div class="row">
            <div>
                You have no notes to display
            </div>
          </div>
        <% } %>
    </div>
    <% if(notes.length > 0) { %>
        <nav aria-label="Page navigation example">
          <ul class="pagination justify-content-center mt-5">
            <% if(current == 1) { %>
              <li class="page-item"><a class="page-link text-dark" href="#">Previous</a></li>
            <% } else { %>
              <li class="page-item"><a class="page-link text-dark" href="/dashboard">First</a></li>
            <% }  %>
            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if (i !== 1 ) { %>
              <li class="page-item"><a class="page-link text-dark" href="#">...</a></li>
            <% } %>
            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
              <% if(i == current ) { %>
                <li class="page-item"><a class="page-link text-dark" href="#"><%= i %></a></li>
              <% } else { %>
                <li class="page-item"><a class="page-link text-dark" href="/dashboard/?page=<%= i %>"><%= i %></a></li>
              <% } %>
              <% if(i == Number(current) + 4 && i < pages) { %>
                <li class="page-item"><a class="page-link text-dark" href="#">...</a></li>
              <% } %>
            <% } %>
            <% if (current == pages) { %>
                <li class="page-item disabled"><a class="page-link text-dark">Last</a></li>
            <% } else { %>
                <li class="page-item"><a href="/dashboard/?page=<%= pages %>" class="page-link text-dark">Last</a></li>
            <% } %>
          </ul>
        </nav> 
      <% } %>
</div>